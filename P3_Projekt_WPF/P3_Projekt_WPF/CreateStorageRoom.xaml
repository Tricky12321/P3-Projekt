<Window x:Class="P3_Projekt_WPF.CreateStorageRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P3_Projekt_WPF"
        mc:Ignorable="d"
        Title="Lav et nyt lagerrum" Height="441.5" Width="932" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,9">
        <TextBlock x:Name="label_name" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Navn" FontSize="30" VerticalAlignment="Top" MinHeight="40" Height="40" Width="76"/>
        <TextBox Padding="0,0,0,0" x:Name="textBox_Name" FontSize="30" HorizontalAlignment="Right" Height="42" MinHeight="40" Margin="0,10,369,0" VerticalAlignment="Top" Width="379">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <TextBlock IsHitTestVisible="False" x:Name="TextBlock_name_insert" Foreground="DarkGray" FontSize="30" Margin="0,10,517,0" TextWrapping="Wrap" Text="Navn" VerticalAlignment="Top" Height="40" MinHeight="40" HorizontalAlignment="Right" Width="228">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=textBox_Name}" Value="">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <TextBlock x:Name="textBlock_descr" HorizontalAlignment="Left" FontSize="30" Margin="10,80,0,0" TextWrapping="Wrap" Text="Beskrivelse" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox_descr" FontSize="30" HorizontalAlignment="Right" Height="254" Margin="163,80,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="738" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <TextBlock x:Name="TextBlock_descr_insert" IsHitTestVisible="False" Foreground="DarkGray" FontSize="30" Margin="0,81,408,0" TextWrapping="Wrap" Text="Beskrivelse for lagerrum..." VerticalAlignment="Top" HorizontalAlignment="Right" Width="337">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=textBox_descr}" Value="">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

        <TextBlock x:Name="label_StorageID" Margin="586,10,0,0" Text="Storage ID:" FontSize="24" MinHeight="24" VerticalAlignment="Top" HorizontalAlignment="Left" Width="118" Height="32"/>
        <TextBlock x:Name="output_StorageID" HorizontalAlignment="Right" Margin="0,10,20,0" TextWrapping="Wrap" Text=""  FontSize="24" VerticalAlignment="Top" Height="32"/>

        <Button Style="{StaticResource Flat_Button}" Background="#FFC5C5C5" x:Name="btn_SaveAndQuit" Content="Gem og Afslut"  FontSize="30" Margin="0,0,10,10" Height="45" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="220"/>
        <Button Style="{StaticResource Flat_Button}" Background="#FFC5C5C5" x:Name="btn_JustQuit" Content="Afbryd"  FontSize="30" Margin="0,0,240,10" Height="45" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="220"/>
        <Button Style="{StaticResource Flat_Button}" Background="#FFC5C5C5" x:Name="btn_deleteStorageRoom" Content="Slet dette lager"  FontSize="30" Margin="10,0,0,15" Height="45" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="300" Visibility="Hidden"/>
    </Grid>
</Window>
