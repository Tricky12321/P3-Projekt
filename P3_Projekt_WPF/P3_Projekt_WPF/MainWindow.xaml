<Window x:Class="P3_Projekt_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P3_Projekt_WPF"
        mc:Ignorable="d"
        Title="Børglum Kloster Lager og Salg" Height="1080"  Width="1900" Background="#FF919191">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="1021*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TabControl x:Name="tabControl" FontSize="30" SelectionChanged="tabControl_SelectionChanged_1" Margin="0,0,0.333,-0.333" Grid.RowSpan="2">
            <TabItem Header="Salg" Width="190">
                <Grid Background="#FFE5E5E5" Margin="0">
                    <Grid.ColumnDefinitions>

                        <ColumnDefinition Width="1777*"/>
                        <ColumnDefinition Width="111*"/>

                    </Grid.ColumnDefinitions>
                    <Button x:Name="button" Content="Button" Margin="1549,832,10.333,9.667" Grid.ColumnSpan="2"/>
                    <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="1887" Grid.ColumnSpan="2"/>
                </Grid>
            </TabItem>
            <TabItem Header="Lager" Width="190">
                <Grid Background="#FFE5E5E5" Margin="0">
                    <Grid.ColumnDefinitions>

                        <ColumnDefinition Width="1777*"/>
                        <ColumnDefinition Width="111*"/>

                    </Grid.ColumnDefinitions>
                    <Button x:Name="button2" Content="Button" Margin="1549,832,10.333,9.667" Grid.ColumnSpan="2"/>
                </Grid>
            </TabItem>
            <TabItem Header="Statistik" Width="190">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>
            <TabItem Header="Indstillinger" Width="190">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <Frame x:Name="frame" Content="" Margin="1524,0,0.333,1003.667" Grid.RowSpan="2"/>

        <Button x:Name="button1" Content="Button" Margin="0,5,10.333,0" VerticalAlignment="Top" Height="35" Grid.RowSpan="2" HorizontalAlignment="Right" Width="40">
            <Button.Background>
                <ImageBrush ImageSource="Resources/Magnifying_glass_icon.svg.png"/>
            </Button.Background>
        </Button>
        <TextBox x:Name="textBox" Height="35" Margin="0,5,55.333,0" Grid.RowSpan="2" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" HorizontalAlignment="Right" Width="288"/>
    </Grid>
</Window>
