<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P3_Projekt_WPF"
        xmlns:Classes="clr-namespace:P3_Projekt_WPF.Classes" x:Class="P3_Projekt_WPF.MainWindow"
        mc:Ignorable="d"
        Title="Børglum Kloster Lager og Salg" Height="1080"  Width="1900" Background="#FF919191" WindowState="Maximized">
    <Grid>
        <TabControl x:Name="tabControl" FontSize="30" SelectionChanged="tabControl_SelectionChanged_1" Margin="0,0,0.333,-0.333" Grid.RowSpan="3">
            <TabItem Header="Salg" Width="190">
                <Grid Background="#FFE5E5E5" Margin="0,1,0.333,-1.333">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>


                    <Button x:Name="but_search" Content="🔎" Background="#FF767676" Margin="0,10,10.333,0" VerticalAlignment="Top" Height="50" Style="{StaticResource Flat_Button}" FontSize="21" HorizontalAlignment="Right" Width="50" Grid.Column="1"/>

                    <Grid Margin="0,0,0.333,0">
                        <TextBox Padding="10,0,0,0" x:Name="SearchTermTextBox" Margin="0,10,74,12" FontSize="33" HorizontalAlignment="Right" Width="503">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <TextBlock IsHitTestVisible="False" Text="Søg efter produkt" Margin="0,11,294,14" Foreground="DarkGray" FontSize="33" HorizontalAlignment="Right" Width="271">
                            <TextBlock.Style>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=SearchTermTextBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                    </Grid>


                    <Button x:Name="But_Cash"  Content="Kontant" Margin="0,0,10.333,120.667" Background="#FFC5C5C5" Style="{StaticResource Flat_Button}" Height="50" Width="260" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="1"/>
                    <Border BorderBrush="Black" BorderThickness="1" Height="1" VerticalAlignment="Top" Margin="-34,71,-78.667,0" Grid.ColumnSpan="2"/>
                    <Button x:Name="but_Card"  Content="Dankort" Margin="0,0,10.333,65.667" Background="#FFC5C5C5" Style="{StaticResource Flat_Button}" Height="50" Width="260" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="1"/>
                    <Button x:Name="but_MobilePay"  Content="MobilePay" Margin="0,0,10.333,10.667" Background="#FFC5C5C5" Style="{StaticResource Flat_Button}" Click="but_MobilePay_Click" Height="50" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="260" Grid.Column="1" Grid.Row="1"/>
                    <ListView x:Name="listView_Receipt" Margin="0,10,1,184.667" FontSize="23" SelectionChanged="listView_Receipt_SelectionChanged" Grid.Row="1" HorizontalAlignment="Right" Width="848">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Style="{StaticResource Flat_Button}"
                                                Content = "+"

                                                Width="30"
                                                Height="30"
                                                VerticalAlignment = "Center"
                                                Click="but_Increment_Click"
                                            />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Style="{StaticResource Flat_Button}"
                                                Content = "-"
                                                Width="30"
                                                Height="30"
                                                VerticalAlignment = "Center"
                                                Click="but_Decrement_Click"
                                            />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Amount}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding String_Product}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Price}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Style="{StaticResource Flat_Button}"
                                                Content = "x"
                                                Width="30"
                                                Height="30"
                                                VerticalAlignment = "Center"
                                                Click="but_DeleteProduct_Click"
                                            />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button x:Name="But_EditReceipt"  Content="Rediger Kvittering" Margin="10,10,0,12" Background="#FFC5C5C5" Style="{StaticResource Flat_Button}" HorizontalAlignment="Left" Width="250"/>
                    <Grid x:Name="grid_QuickButton" Margin="10,73,860,65.667" Grid.Row="1"/>
                    <Border BorderBrush="Black" BorderThickness="1" Margin="0,0,854,-0.333" Background="Black" Width="1" Grid.Row="1" HorizontalAlignment="Right"/>
                    <Button x:Name="btn_AddProduct"  Content="Tilføj Produkt" Margin="593,17,0,0" Background="#FFC5C5C5" Style="{StaticResource Flat_Button}" HorizontalAlignment="Left" Width="260" Grid.Row="1" Height="50" VerticalAlignment="Top"/>
                    <Button x:Name="btn_PlusToReciept" Content="+" HorizontalAlignment="Left" Margin="386,17,0,0" Width="35" Style="{StaticResource Flat_Button}" RenderTransformOrigin="-0.486,0.333" Grid.Row="1" Height="50" VerticalAlignment="Top"/>
                    <Button x:Name="btn_MinusToReciept" Content="-" HorizontalAlignment="Left" Margin="426,17,0,0" Width="35" Style="{StaticResource Flat_Button}" FontSize="30" Grid.Row="1" Height="50" VerticalAlignment="Top"/>



                    <TextBox Padding="10,0,0,0" x:Name="AddProductID" Margin="10,17,0,0" FontSize="33" HorizontalAlignment="Left" Width="350" Grid.Row="1" Height="50" VerticalAlignment="Top">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <TextBlock IsHitTestVisible="False" Text="Tilføj Produkt med ID" Margin="24,18,0,0" Foreground="DarkGray" FontSize="33" HorizontalAlignment="Left" Width="326" Grid.Row="1" Height="50" VerticalAlignment="Top">
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=AddProductID}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBox x:Name="textBox" Padding="10,0,0,0" HorizontalAlignment="Left" Margin="466,17,0,0" TextWrapping="Wrap" Text="1" Width="84" MaxLines="1" MaxLength="3" FontSize="33" Grid.Row="1" Height="50" VerticalAlignment="Top">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <Button x:Name="but_Temporary"  Content="Midlertidigt Produkt" Margin="0,0,867,9.667" Background="#FFC5C5C5" Style="{StaticResource Flat_Button}" Height="50" Width="300" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Row="1"/>
                    <Button x:Name="But_Cancel"  Content="Afbryd" Margin="0,0,582,9.667" Background="#FFC5C5C5" Style="{StaticResource Flat_Button}" Height="50" VerticalAlignment="Bottom" Grid.Row="1" HorizontalAlignment="Right" Width="260"/>

                    <TextBox Padding="10,0,0,0" x:Name="PayWithAmount" Margin="0,0,281,120.667" FontSize="33" Grid.Row="1" Height="50" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="350">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <TextBlock IsHitTestVisible="False" Text="Betalt Beløb" Margin="0,0,293,119.667" Foreground="DarkGray" FontSize="33" HorizontalAlignment="Right" Width="326" Grid.Row="1" Height="50" VerticalAlignment="Bottom">
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=PayWithAmount}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                </Grid>
            </TabItem>
            <TabItem Header="Lager" Width="190">
                <Grid Background="#FFE5E5E5" Margin="0">
                    <Border BorderBrush="Black" BorderThickness="1" Height="1" VerticalAlignment="Top" Margin="-34,71,-79,0"/>
                    <Button x:Name="btn_MoveProduct" Content="Flyt Produkt" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="250" Height="50" Style="{StaticResource Flat_Button}"/>
                        <ScrollViewer x:Name="scroll_StorageProduct" HorizontalAlignment="Left" Height="905" Margin="5,81,0,0" VerticalAlignment="Top" Width="1400"/>


                    <Button x:Name="btn_EditProduct" Content="Rediger Produkt" Margin="1626,0,10,10" Style="{StaticResource Flat_Button}" Height="50" VerticalAlignment="Bottom"/>
                </Grid>
            </TabItem>
            <TabItem Header="Statistik" Width="190">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Border BorderBrush="Black" BorderThickness="1" Height="1" VerticalAlignment="Top" Margin="-34,71,-79,0"/>
                </Grid>
            </TabItem>
            <TabItem Header="Indstillinger" Width="190" Height="46" Margin="0,-2,0,0" VerticalAlignment="Bottom">
                <Grid Background="#FFE5E5E5">
                    <Grid HorizontalAlignment="Left" Height="100" Margin="1505,321,0,0" VerticalAlignment="Top" Width="100"/>
                    <Border BorderBrush="Black" BorderThickness="1" Height="1" VerticalAlignment="Top" Margin="-34,71,-79,0"/>
                </Grid>
            </TabItem>
        </TabControl>


        <TextBlock IsHitTestVisible="False" Text="SØG ERFTER ET PRODUKT" Margin="100,70,0,0" VerticalAlignment="Top" HorizontalAlignment="Right" Foreground="Red" Height="200" Grid.Row="1" Width="200">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=textbox}" Value="">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>






    </Grid>


</Window>
