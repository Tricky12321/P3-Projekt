<Window x:Class="P3_Projekt_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P3_Projekt_WPF"
        mc:Ignorable="d"
        Title="Børglum Kloster Lager og Salg" Height="1080" Width="1920" WindowState="Maximized" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FF919191" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="1050" VerticalAlignment="Top" Width="1914" FontSize="30" SelectionChanged="tabControl_SelectionChanged_1" Margin="0">
            <TabItem Header="Salg" Width="190">
                <Grid Background="#FFE5E5E5" Margin="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="126*"/>
                        <ColumnDefinition Width="113*"/>
                    </Grid.ColumnDefinitions>
                    <Border BorderBrush="Black" BorderThickness="1" Height="60" VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="0,0,1,0"/>
                    <Border BorderBrush="Black" BorderThickness="1" Height="648" VerticalAlignment="Top" Margin="0,60,25.6,0">
                        <Button x:Name="button" Content="Button"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Height="938" VerticalAlignment="Top" Margin="980,60,1,-0.4" Grid.ColumnSpan="2">
                        <Button x:Name="button2" Content="Button"/>
                    </Border>
                    <Button x:Name="button1" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="305" Grid.Column="1" Margin="587.4,10,0,0"/>
                </Grid>
            </TabItem>
            <TabItem Header="Lager" Width="190">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="506*"/>
                        <ColumnDefinition Width="689*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>
            <TabItem Header="Statistik" Width="190">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>
            <TabItem Header="Indstillinger" Width="190">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
