<UserControl x:Class="P3_Projekt_WPF.ProductControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:P3_Projekt_WPF"
             mc:Ignorable="d" Background="Transparent" Height="67.75" MinHeight="100" MinWidth="60" Width="0">

    <Grid Height="auto" Margin="0,0,0,0" Width="auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>
        <Button x:Name="button" Width="auto" Style="{StaticResource Flat_Button}" Background="Gray" Grid.RowSpan="2" Margin="0,0,0,0"/>
        <Border BorderThickness="1" BorderBrush="Black" CornerRadius="8" Margin="2,2,2,2">
            <Image x:Name="image" Height="auto" Margin="0,0,0,0" Width="auto"/>
        </Border>
        <TextBlock x:Name="textBlock" Margin="0,0,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBlock" />



    </Grid>

</UserControl>
