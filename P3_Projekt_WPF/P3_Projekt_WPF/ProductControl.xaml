<UserControl x:Class="P3_Projekt_WPF.ProductControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:P3_Projekt_WPF"
             mc:Ignorable="d" Background="Transparent" Height="350" Width="250" >
    <Grid Margin="0,0,0,0" >
        <Grid.RowDefinitions>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="23*"/>
        </Grid.RowDefinitions>
        <Border BorderBrush="Black" BorderThickness="1" Background="LightGray" HorizontalAlignment="Left" Height="350" VerticalAlignment="Top" Width="250" CornerRadius="8,8,8,8" Grid.RowSpan="2"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="189" VerticalAlignment="Top" Width="250" Source="Resources/Magnifying_glass_icon.svg.png" />

        <Border BorderThickness="1" BorderBrush="Black" Margin="0,28,2,0" Height="16" Background="White" VerticalAlignment="Top" Grid.Row="1">
            <TextBlock x:Name="txt_ID" HorizontalAlignment="Left" Margin="2,-1,0,-1" TextWrapping="Wrap" Text="ID:" VerticalAlignment="Bottom" FontSize="11"/>
        </Border>

        <Border BorderThickness="1" BorderBrush="Black" Margin="2,44,0,0" Height="16" Background="White" VerticalAlignment="Top" Grid.Row="1">
            <TextBlock x:Name="txt_Name" Margin="2,-2,127,1" TextWrapping="Wrap" Text="Navn:" VerticalAlignment="Bottom" Height="15" FontSize="11"/>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" Margin="0,65,2,0" Height="16" Background="White" VerticalAlignment="Top" Grid.Row="1">
            <TextBlock x:Name="txt_Group" HorizontalAlignment="Left" Margin="2,-2,0,1" TextWrapping="Wrap" Text="Gruppe:" VerticalAlignment="Bottom" Height="15" Width="50" FontSize="11"/>
        </Border>

        <Border BorderBrush="Black" BorderThickness="1" Height="16" Margin="2,86,0,0" Background="White" VerticalAlignment="Top" Grid.Row="1">
            <TextBlock x:Name="txt_Price" HorizontalAlignment="Left" Margin="2,0,0,-1" TextWrapping="Wrap" Text="Pris:" Width="50" Height="15" VerticalAlignment="Bottom" FontSize="11"/>
        </Border>

        <Border BorderBrush="Black" BorderThickness="1" Height="16" Margin="0,125,2,0" Background="White" VerticalAlignment="Top" Grid.Row="1">
            <TextBlock x:Name="txt_Stock" HorizontalAlignment="Left" Margin="2,-1,0,0" TextWrapping="Wrap" Text="Lagerbeholdning:" VerticalAlignment="Top" Height="15" Width="88" FontSize="11" />
        </Border>
    </Grid>
</UserControl>
