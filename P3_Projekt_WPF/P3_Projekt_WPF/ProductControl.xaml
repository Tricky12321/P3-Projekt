<UserControl x:Class="P3_Projekt_WPF.ProductControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:P3_Projekt_WPF"
             mc:Ignorable="d" Background="LightBlue" Height="234" Width="185">
    <Grid Margin="2,2,0,0">
        <Border BorderBrush="Black" BorderThickness="1" Background="CadetBlue" HorizontalAlignment="Left" Height="121" VerticalAlignment="Top" Width="181"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="120" VerticalAlignment="Top" Width="180" Source="Resources/Magnifying_glass_icon.svg.png"/>
        <TextBlock x:Name="txt_ID" HorizontalAlignment="Left" Margin="4,126,0,0" TextWrapping="Wrap" Text="ID:" VerticalAlignment="Top"/>
        <TextBlock x:Name="txt_Name" HorizontalAlignment="Left" Margin="4,147,0,0" TextWrapping="Wrap" Text="Navn:" VerticalAlignment="Top" Height="15" Width="50"/>
        <TextBlock x:Name="txt_Group" HorizontalAlignment="Left" Margin="4,168,0,0" TextWrapping="Wrap" Text="Gruppe:" VerticalAlignment="Top" Height="15" Width="50"/>
        <TextBlock x:Name="txt_Price" HorizontalAlignment="Left" Margin="4,189,0,0" TextWrapping="Wrap" Text="Pris" VerticalAlignment="Top" Height="15" Width="50"/>
        <TextBlock x:Name="txt_Stock" HorizontalAlignment="Left" Margin="4,210,0,0" TextWrapping="Wrap" Text="Lagerbeholdning" VerticalAlignment="Top" Height="15" Width="50"/>
    </Grid>
</UserControl>
